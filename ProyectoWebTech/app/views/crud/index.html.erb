<p id="notice"><%= notice %></p>

<head>
  <%= stylesheet_link_tag 'global', media:'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="columna-azul">
<div class="columna-blanca">

  <h1 class="center">All the Events</h1>
  <% @events.each do |event| %>

  <h2 class="columna-blanca"><%=event.title %></h2>
    <ul class="columna-blanca">
      <li>Ubication: <%= event.ubication %></li>
      <li>User: <%= event.user.name %></li>
      <li><%= link_to 'Show', event %></li>
      <li><%= link_to 'Edit', edit_event_path(event) %></li>
      <li><%= link_to "Delete", delete_event_path(event), { id: event.id}%></li>
    </ul>
  <% end %>

  <%= link_to 'New Event', new_event_path %>

</div>
<div class="columna-blanca">

  <h1 class="center">Every Comment</h1>
  <% @events.each do |event| %>
    <table>
      <h2><%=event.title %></h2>
        <% event.event_comments.each  do |comment| %>
          <tr>
            <td><%= comment.user.name%></td>
            <td><%= comment.message %></td>
            <td><%= link_to 'Edit', edit_event_comment_path(comment) %></td>
            <% comment.comment_comments.each do |commentco| %>
            <tr>
              <td><%= commentco.user.name%></td>
              <td><%= commentco.message %></td>
              <td><%= link_to 'Edit', edit_comment_comment_path(commentco) %></td>
            </tr>
          <%end %>
          </tr>

        <%end %>
    </table>
  <% end %>
  <%= link_to 'New Created Comment', new_event_comment_path %>
  <%= link_to 'New Created Comment on other Comment', new_comment_comment_path %>
</div>
  <div class="columna-blanca">

<br>

</div>
</div>